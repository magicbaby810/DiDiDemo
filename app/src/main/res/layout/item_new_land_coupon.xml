<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/coupon_layout"
    android:paddingLeft="@dimen/x26"
    android:paddingRight="@dimen/x26"
    android:paddingTop="@dimen/x20"
    android:paddingBottom="@dimen/x20"
    android:layout_marginLeft="@dimen/x32"
    android:layout_marginRight="@dimen/x32"
    android:layout_marginTop="@dimen/x20"
    android:background="@drawable/shape_common_gray_corner">

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_common_gray_corner"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingBottom="@dimen/x30"
        android:paddingTop="@dimen/x30"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_coupon_rebate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginRight="@dimen/x20"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x28"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_coupon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x32"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_coupon_data_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x24" />
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/see_more_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:drawableRight="@mipmap/ic_next"
        android:drawablePadding="@dimen/x13"
        android:layout_marginTop="@dimen/x20"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/x24"
        android:text="查看更多"/>
</LinearLayout>