<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x32"
    android:layout_marginRight="@dimen/x32"
    android:layout_marginTop="@dimen/x20"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x23"
        android:layout_marginRight="@dimen/x23"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/use_car_now"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/x35"
            android:paddingBottom="@dimen/x18"
            android:text="@string/title_use_car"
            android:textColor="@color/selector_use_car_color"
            android:textSize="@dimen/x32"
            />

        <TextView
            android:id="@+id/use_car_plan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/x35"
            android:paddingBottom="@dimen/x18"
            android:text="预约"
            android:textColor="@color/selector_use_car_color"
            android:textSize="@dimen/x32"
            />
    </LinearLayout>


    <com.sk.xscrollviewdemo.view.LocationItemView
        android:id="@+id/choose_source_item_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y110" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_marginLeft="@dimen/x84"
        android:layout_marginRight="@dimen/x84"
        android:background="@color/text_color_e7" />

    <com.sk.xscrollviewdemo.view.LocationItemView
        android:id="@+id/choose_dest_item_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y110" />

</LinearLayout>